{% extends 'template.jinja' %}

{% block content %}
{% include 'widgets/nav_bar.jinja' %}
<div class="container">
    <div class="row">
        <br>
        {% block settings %}
        <div class="input-field col s12">
            <select id="theme-select">
            {% for key in themes.keys()%}
                {% if key == theme.name %}
                    <option value="{{key}}" selected >{{key.capitalize()}}</option>
                {% else %}
                    <option value="{{key}}">{{key.capitalize()}}</option>
                {% endif %}
                
            {% endfor %}
            </select>
            <label>Tema</label>
        </div>
        {% endblock %}
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="/js/settings.js"></script>
{% endblock %}